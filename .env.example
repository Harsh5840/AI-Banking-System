# ==============================================================================
# LedgerX Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control
# ==============================================================================

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# Neon PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@host:5432/ledgerx?sslmode=require
GLOBAL_DATABASE_URL=postgresql://user:password@host:5432/ledgerx?sslmode=require

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
PORT=5000
NODE_ENV=development

# ==============================================================================
# URLS
# ==============================================================================
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# ==============================================================================
# SECURITY
# ==============================================================================
# JWT Secret (minimum 32 characters)
JWT_SECRET=your_global_jwt_secret_min_32_chars_here_change_this_in_production

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000,https://your-frontend.vercel.app

# ==============================================================================
# AI/ML API KEYS
# ==============================================================================
# Google Gemini API Key
SHARED_GOOGLE_API_KEY=your_google_gemini_api_key
GOOGLE_API_KEY=your_google_gemini_api_key

# HuggingFace API Token
HUGGINGFACE_API_TOKEN=your_huggingface_token

# OpenAI API Key (optional)
OPENAI_API_KEY=your_openai_api_key

# ==============================================================================
# OAUTH CONFIGURATION
# ==============================================================================
# Google OAuth 2.0
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ==============================================================================
# FRAUD DETECTION THRESHOLDS
# ==============================================================================
RISK_THRESHOLD=50
HIGH_AMOUNT_THRESHOLD=100000
TOTAL_RISK_THRESHOLD=60
RULE_FLAG_THRESHOLD=40

# ==============================================================================
# SYSTEM ACCOUNTS (Generated after first migration)
# ==============================================================================
# These will be auto-generated - fill in after running migrations
SYSTEM_USER_ID=
SYSTEM_INCOME_ACCOUNT_ID=
SYSTEM_EXPENSE_ACCOUNT_ID=

# ==============================================================================
# OPTIONAL CONFIGURATION
# ==============================================================================
APP_ENV=development
LOG_LEVEL=info
ENABLE_STRUCTURED_LOGGING=true

# NextAuth Configuration (for frontend)
NEXTAUTH_SECRET=your_nextauth_secret_here_min_32_chars
